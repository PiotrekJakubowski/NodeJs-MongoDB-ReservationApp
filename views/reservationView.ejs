<!DOCTYPE html>
<html lang="en">
  
  <head>
    <style>
    table, th, td {
      border: 1px solid black;
    }
    </style>
  </head>

  <body>
    <div>
      <div>
        <% if (reservation.length > 0) {%>
        <h2> Client: <%= client.firstName %> <%= client.lastName %> with id: <%= client.id %></h2>
        <table>
          <thead>
            <tr>
              <th>ID</th>
              <th>Court</th>
              <th>Date</th>
              <th>Reservation Actions</th>
            </tr>
          </thead>
          <tbody>
            <% reservation.forEach((reservation, index) => { %>
            <tr>
              <th><%= reservation.id %></th>
              <td><%= reservation.court %></td>
              <td><%= reservation.date %></td>
              <td>
                <a href="/web/editReservation/<%= reservation.id %>" >Edit</a>
                |
                <a href="/web/deleteReservation/<%= reservation.id %>" onclick="return confirm('Are you sure you want to delete the reservation?');">Delete</a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <hr>
        <% } else { %>
        <p>No reservation found.</p>
        <% } %>
      </div>
      <hr>
      <a href="/web/addReservation/<%= client.id %>">Add Reservation</a>
      <hr>
      <a href="/web/clients">Go Back To Clients List</a>
    </div>
  </body>
</html>
